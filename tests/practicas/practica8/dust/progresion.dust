#include <stdio.h>

void pedir_vector_int(int v[], int n) {
  int i;
  for (i=0; i<n; i=i+1) {
    fprintf(stdout,"Introduce v[%d]: ",i);
	fscanf(stdin,"%d",&v[i]);
  }
}

{?funcion_progresion}
{#load blockid=id.funcion_progresion /}
{:else}{~n}
int progresion(int v[], int n) {
  int i,dif;
  if (n<2)
    return 1;
  dif = v[1]-v[0];
  for (i=2; i<n; i=i+1)
    if (v[i]-v[i-1] != dif)
      return 0;
  return 1;
}
{/funcion_progresion}

#define N 5
int main() {
  int a[N];
  pedir_vector_int(a,N);
  if (progresion(a,N))
    printf("Es una progresion aritmetica\n");
  else
    printf("No es una progresion aritmetica\n");
  return 0;
}

