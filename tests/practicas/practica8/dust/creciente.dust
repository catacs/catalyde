#include <stdio.h>

void pedir_vector_int(char nom[],int v[], int n) {
  int i;
  for (i=0; i<n; i=i+1) {
    fprintf(stdout,"Introduce %s[%d]: ",nom,i);
	fscanf(stdin,"%d",&v[i]);
  }
}

{?funcion_creciente}
{#load blockid=id.funcion_creciente /}
{:else}{~n}
int creciente(int v[], int n) {
  int i;
  for (i=1; i<n; i=i+1)
    if (v[i-1] > v[i])
      return 0;
  return 1;
}
{/funcion_creciente}

#define N 5
int main() {
  int a[N];
  pedir_vector_int("a",a,N);
  if (creciente(a,N))
    printf("La secuencia es estrictamente creciente\n");
  else
    printf("La secuencia no es estrictamente creciente\n");
  return 0;
}

